# Workspace Names
set $ws1 "1:web"
set $ws2 "2:dev"
set $ws3 "3:files"
set $ws4 "4:misc"
set $ws5 "5:ext"

# Assign
assign [class="Firefox"] $ws1
assign [class="xterm"] $ws2
assign [class="pcmanfm"] $ws3

# Startup programs
exec --no-startup-id nm-applet # network manager
exec --no-startup-id xsetroot -solid "#222222"  # background
exec --no-startup-id xset s off  # screensaver off
exec --no-startup-id xrdb ~/.Xdefaults  # terminal settings
exec --no-startup-id blueman-applet
# exec --no-startup-id sh -c 'sleep 1; i3-msg workspace $ws1; exec firefox;'
# exec --no-startup-id sh -c 'sleep 2; i3-msg workspace $ws2; exec xterm;'
# exec --no-startup-id sh -c 'sleep 3; i3-msg workspace $ws3; exec pcmanfm;'
# exec --no-startup-id sh -c 'sleep 4; i3-msg workspace $ws2;'


# Set ALT as mod key
set $mod Mod1

# Colors           Border   Background  Text
client.focused     #000000  #3A5894     #EEEEEE
client.unfocused   #555555  #333333     #EEEEEE
client.background  #444444  #444444     #EEEEEE

# Float windows
for_window [class="Image"] floating enable
for_window [title="viz"] floating enable move position 0 0
for_window [title="Viz"] floating enable move position 0 0
for_window [title="dev"] floating enable
for_window [title="Figure 1"] floating enable
for_window [title="Figure 2"] floating enable
for_window [title="Figure 3"] floating enable
for_window [title="Figure 4"] floating enable
for_window [title="Figure 5"] floating enable
for_window [title="MPlayer"] floating enable
# assign [title="Viz"] 4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:DejaVu Sans Mono 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Start a terminal
bindsym $mod+t exec xterm

# Screenshot
bindsym $mod+s exec gnome-screenshot -i -a

# Kill focused window
bindsym $mod+q kill

# Start dmenu (a program launcher)
bindsym $mod+space exec dmenu_run

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Control+h move left
bindsym $mod+Control+j move down
bindsym $mod+Control+k move up
bindsym $mod+Control+l move right

# Screen layouts
bindsym $mod+Control+Shift+h exec ~/.screenlayout/home.sh
bindsym $mod+Control+Shift+w exec ~/.screenlayout/work.sh
bindsym $mod+Control+Shift+l exec ~/.screenlayout/laptop.sh

# workspace $ws1 output HDMI-1 eDP-1
# workspace $ws2 output HDMI-1 eDP-1
# workspace $ws3 output HDMI-1 eDP-1
# workspace $ws4 output HDMI-1 eDP-1
# workspace $ws5 output eDP-1 HDMI-1

workspace $ws1 output DP-1 eDP-1
workspace $ws2 output DP-1 eDP-1
workspace $ws3 output DP-1 eDP-1
workspace $ws4 output DP-1 eDP-1
workspace $ws5 output eDP-1 DP-1

# workspace 1 output eDP-1 HDMI-1
# workspace 2 output eDP-1 HDMI-1
# workspace 3 output eDP-1 HDMI-1
# workspace 4 output HDMI-1 eDP-1
# workspace 5 output HDMI-1 eDP-1

# workspace 1 output eDP-1 DP-2
# workspace 2 output eDP-1 DP-2
# workspace 3 output eDP-1 DP-2
# workspace 4 output DP-2 eDP-1
# workspace 5 output DP-2 eDP-1

# Split in horizontal orientation
bindsym $mod+Shift+h split h

# Split in vertical orientation
bindsym $mod+v split v

# Fullscreen mode for the focused container
bindsym $mod+f fullscreen

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Move workspace to external monitor and back
bindsym $mod+m move workspace to output HDMI-0

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+Control+space focus mode_toggle

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5

# Restart i3 inplace
bindsym $mod+Shift+r restart

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -b 'Yes' 'i3-msg exit'"

# Resize window
mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Ljft resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# i3bar
bar {
  # color
  colors {
    background #333333
    separator #666666
    statusline #EEEEEE #that neon blue

    focused_workspace  #4c7899 #285577 #ffffff
    active_workspace   #333333 #5f676a #ffffff
    inactive_workspace #333333 #222222 #888888
    urgent_workspace   #2f343a #900000 #ffffff
  }

  # i3bar position
  position top

  # i3bar status
  status_command i3status -c ~/.config/i3/i3status.conf
}

# volume
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 10%+ unmute
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 10%- unmute
bindsym XF86AudioMute exec amixer -D pulse sset Master toggle

# brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20
