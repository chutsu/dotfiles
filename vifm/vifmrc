" only
view

colorscheme custom

mark h ~/ Home
mark p ~/projects Projects
mark d ~/Downloads Downloads

" Quit with q
nmap q ZZ

filextype *.html,*.htm
  \ {Open webpage with google-chrome}
  \ google-chrome %f > /dev/null 2>&1 &

filextype *.pdf
  \ {Open pdfs with evince}
  \ evince %f > /dev/null 2>&1 &

filetype *.jpg,*.jpeg,*.png,*.gif
  \ {Open images with feh}
  \ feh -Z %d -g 1024x768 --start-at %d/%c 2>/dev/null

fileviewer *.tar,*.tar.gz
  \ tar -tvf %c

" FZF file search
command! fzf :execute '!fzf 2>&0 %%IU || echo %c' | normal! gf

" Show progress bar when copying or moving
set syscalls

" Set trash directory
set trashdir=/tmp/vifm_trash

" Automatically calculate folder sizes
autocmd VimEnter * :normal gA
autocmd DirEnter * :normal gA

fileviewer *.pdf
  \ vifmimg pdf %px %py %pw %ph %c
  \ %pc
  \ vifmimg clear

fileviewer *.djvu
  \ vifmimg djvu %px %py %pw %ph %c
  \ %pc
  \ vifmimg clear

fileviewer *.epub
  \ vifmimg epub %px %py %pw %ph %c
  \ %pc
  \ vifmimg clear

fileviewer <video/*>
  \ vifmimg video %px %py %pw %ph %c
  \ %pc
  \ vifmimg clear

fileviewer <image/*>
  \ vifmimg draw %px %py %pw %ph %c
  \ %pc
  \ vifmimg clear

fileviewer <audio/*>
  \ vifmimg audio %px %py %pw %ph %c
  \ %pc
  \ vifmimg clear

fileviewer <font/*>
  \ vifmimg font %px %py %pw %ph %c
  \ %pc
  \ vifmimg clear

" Normal dirs
fileview */ tree %c -L 1

" Hidden dirs
fileview *./ tree %c -L 1

" .. Parent dir
fileview ../ tree %c -L 1

" Video
filetype *.gif,*.avi,*.mp4,*.wmv,*.dat,*.3gp,*.ogv,*.mkv,*.mpg,*.mpeg,*.vob,
  \*.fl[icv],*.m2v,*.mov,*.webm,*.ts,*.mts,*.m4v,*.r[am],*.qt,*.divx,
  \*.as[fx]
  \ mplayer -vf scale -zoom -xy 1024 %c
